<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rock"
            android:id="@+id/teValasztasod_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A te választásod"
            android:textSize="28sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rock"
            android:id="@+id/gepValasztasa_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A gép választása"
            android:textSize="28sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eredmény: Ember:0 Computer:0"
            android:textSize="26sp"
            android:id="@+id/eredmeny_txt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kő"
                android:id="@+id/ko_btn"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Papír"
                android:id="@+id/papir_btn"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olló"
                android:id="@+id/ollo_btn"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>